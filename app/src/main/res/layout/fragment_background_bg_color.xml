<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="135dp"
    android:background="@drawable/round_2corner_view"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/cancel_backgroundColor"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:backgroundTint="@color/white"
        android:layout_margin="15dp"
        android:background="@drawable/close"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Background Color"
        android:textSize="15dp"
        android:textAllCaps="false"
        android:layout_marginTop="15dp"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/accept_backgroundColor"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:backgroundTint="@color/white"
        android:layout_gravity="right"
        android:layout_margin="15dp"
        android:background="@drawable/ic_baseline_check_24"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="15dp"
        android:layout_marginHorizontal="20dp"
        android:weightSum="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_backgroundColor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingStart="15dp"
            android:text="Please wait..."
            android:textColor="@color/white"
            android:textSize="15dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal"
        android:visibility="gone"
        android:id="@+id/colorBackground"
        android:weightSum="1">
        
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/transparent"
            android:id="@+id/transparent"/>

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="50dp"
                    android:background="#ED0014"
                    android:layout_marginRight="5dp"
                    android:id="@+id/BC1"/>
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="50dp"
                    android:background="#FFD3CE"
                    android:layout_marginRight="5dp"
                    android:id="@+id/BC2"/>
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="50dp"
                    android:background="#ED8590"
                    android:layout_marginRight="5dp"
                    android:id="@+id/BC3"/>
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="50dp"
                    android:background="#D39049"
                    android:layout_marginRight="5dp"
                    android:id="@+id/BC4"/>
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="50dp"
                    android:background="#FFDAAC"
                    android:layout_marginRight="5dp"
                    android:id="@+id/BC5"/>
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="50dp"
                    android:background="#976639"
                    android:layout_marginRight="5dp"
                    android:id="@+id/BC6"/>
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="50dp"
                    android:background="#74BC53"
                    android:layout_marginRight="5dp"
                    android:id="@+id/BC7"/>
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="50dp"
                    android:background="#3698F1"
                    android:layout_marginRight="5dp"
                    android:id="@+id/BC8"/>

            </LinearLayout>

        </HorizontalScrollView>

    </LinearLayout>
</FrameLayout>